<div class="container">
	<h2>Hello! <%= @user.email %></h2>

	<%= link_to "My Favorite" , favorite_users_path , :class => "btn btn-info" %>
	<%= link_to "Back To List" , topics_path , :class => "btn btn-primary pull-right" %>
	<%= link_to "My Draft" , draft_users_path , :class => "btn btn-warning" %>
	<div class="clearfix"></div>
	
	
	<% @topics.each do |t| %>
		<%= form_for t , :url => "" , :method => :patch do |f| %>
			<div class="form-group">
				<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
			</div>
			<div class="form-group">
				<%= f.label :title , "Title : " %>
				<%= f.text_field :title , :class => "form-control" %>
			</div>
				<%= f.label :t_content , "Content : " %>
				<%= f.text_area :t_content , :rows => "20" , :class => "form-control" %>
			<div class="form-group">
				<%= f.hidden_field :t_time , :value => Time.now %>
				<%= f.hidden_field :user_id , :value => @user.id %>
			</div>
		<% end %>
	<% end %>

	<% @comments.each  do |c| %>
		<%= form_for c , :url => "" do |f| %>
			<%= f.label :c_content , "Content : " %>
			<%= f.text_area :c_content , :rows => "20" , :class => "form-control" %>
			<%= f.hidden_field :user_id , :value => @user.id %>
		<% end %>
	<% end %>

</div>
